<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<ScrollPane hbarPolicy="NEVER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.paulgutv.currencyconverter.controller.MainController">
    <content>
        <VBox fx:id="mainContainer" alignment="TOP_CENTER" prefHeight="650.0" prefWidth="539.0" style="-fx-background-color: whitesmoke;">
            <children>
                <VBox fx:id="container" prefHeight="163.0" prefWidth="539.0" />
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addButton1" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: purple; -fx-background-radius: 25;" text="+" textAlignment="CENTER" textFill="WHITE">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <font>
                        <Font size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="30.0" top="20.0" />
                    </VBox.margin>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </VBox>
    </content>
</ScrollPane>
